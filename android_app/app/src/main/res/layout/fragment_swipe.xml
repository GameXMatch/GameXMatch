<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/stack_view_id"
            android:layout_width="400dp"
            android:layout_height="450dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:divider="@color/cardview_light_background">

            <Button
                android:id="@+id/swipe_left_button"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="@string/swipe_left_button" />

            <Space
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/swipe_right_button"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_gravity="end"
                android:text="@string/swipe_right_button" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>